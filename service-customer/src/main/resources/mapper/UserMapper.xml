<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coderqian.eurekacustomer.mapper.UserMapper">

    <sql id="user">
            id id,
            name name,
            birth birth
    </sql>

    <select id="findAll" resultType="User">
        select
            <include refid="user"/>
        from user
    </select>

    <select id="findUserById" parameterType="java.lang.String" resultType="User">
        select
            <include refid="user"/>
        from user
        <where>
            <if test="id != null and id != ''">
              id = #{id}
            </if>
        </where>
    </select>

    <insert id="insertUser" parameterType="com.coderqian.eurekacustomer.model.entity.UserEntity">
        <selectKey keyProperty="id" resultType="string" order="BEFORE">
            select replace(uuid(), '-', '') as id from dual
        </selectKey>
        insert into user(id, name, birth)
        values (#{id}, #{user.name}, #{user.birth})
    </insert>
</mapper>